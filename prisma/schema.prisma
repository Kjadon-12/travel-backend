generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}



model NearByAirport {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  airportCode String @unique
  Airport Airport[]
}

model Airport {
id      String   @id @default(auto()) @map("_id") @db.ObjectId
airportName String
cityName String
countryName String
airportCode String @unique
cityCode String
countryCode String
latitude     Float
longitude    Float
groupedData NearByAirport? @relation(fields: [airportCode], references: [airportCode])

}

model AirlinesWith {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  date    String @unique
  

}
